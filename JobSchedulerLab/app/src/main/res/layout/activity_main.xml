<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stacyzolnikov.jobschedulerlab.MainActivity">

    <Button
    android:id="@+id/btn_schedule_job"
    android:text="Job One"
    android:gravity="top|center|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_schedule_job_two"
        android:text="Job Two"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Old Text"
        android:textSize="20dp"
        android:id="@+id/oldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="New Text"
        android:textSize="20dp"
        android:id="@+id/newText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
